CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
RM = /bin/rm -f
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ)

clean:
	$(RM) *~ $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean
	$(RM) $(NAME)

re: fclean all

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@
