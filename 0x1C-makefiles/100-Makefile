CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
NAME := school
RM := /bin/rm -f
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
DEPS := m.h

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c $(DEPS)
	$(CC) $(CFLAGS) -c  -o $@ $<

clean:
	$(RM) *~ $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean
	$(RM) $(NAME)

re: fclean all
